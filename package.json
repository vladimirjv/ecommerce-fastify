  "dependencies": {
    "@sinclair/typebox": "^0.23.4",
    "fastify": "^3.27.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
